@{
    ViewData["Title"] = "Create Dapp";
}

<form class="form-horizontal">
    <fieldset>
        <legend>Create Dapp</legend>
        <div class="form-group">
            <label for="txtName" class="col-lg-2 control-label">Name</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" id="txtName" placeholder="Dapp Name">
            </div>
        </div>
        <div class="form-group">
            <label for="txtDescription" class="col-lg-2 control-label">Description</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" id="txtDescription" placeholder="Dapp Description">
            </div>
        </div>
        <div class="form-group">
            <label for="txtSecret" class="col-lg-2 control-label">Secret</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" id="txtSecret" placeholder="Dapp Description">
            </div>
        </div>
        <div class="form-group">
            <label for="txtPublicKeys" class="col-lg-2 control-label">Public Keys</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" id="txtPublicKeys" placeholder="Dapp Description">
            </div>
        </div>
        <div class="form-group">
            <label for="chkBlockchain" class="col-lg-2 control-label">Overwrite Blockchain</label>
            <div class="col-lg-10">
                <div class="checkbox">
                    <label>
                        <input id="chkBlockchain"type="checkbox"> 
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="chkGenesis" class="col-lg-2 control-label">Overwrite Genesis</label>
            <div class="col-lg-10">
                <div class="checkbox">
                    <label>
                        <input id="chkGenesis" type="checkbox"> 
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Create Dapp</button>
            </div>
        </div>
    </fieldset>
</form>
